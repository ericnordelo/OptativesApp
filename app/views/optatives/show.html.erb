 <div class="row rounded-buttons">
    <div class="col-sm-10">
      
      <h2><strong>Optativo:</strong> <span style="color: crimson"><%= @optative.title %></span></h2>
    </div>
    <div class="col-sm-2 flex-container" style="padding-top: 18px;">
      <% if @optative.enrollment == @optative.taked %>
      <a href="" class="btn btn-danger btn-lg disabled">Se ha llenado<br> la matrícula</a>
      <% else%>
      <% if user_signed_in? and current_user.has_role? :student and current_user.year == @optative.year.to_s and current_user.can_register?( @optative)[0] %>
      
      <% if current_user.optatives.exists? @optative.id%>
      <a href="" class="btn btn-danger btn-lg disabled">Ya Registrado...</a>
      <% else %>
      <a data-confirm="Esta acción es permanente... ¿ estás seguro ?" href="<%= register_path @optative %>" data-method="post" class="btn btn-primary btn-lg animated-button">Registrarse Aquí</a>
      <% end -%>

      <% else %>
      <% if ! current_user.can_register?( @optative)[0] %>
      <% if current_user.optatives.exists? @optative.id%>
      <a href="" class="btn btn-danger btn-lg disabled">Ya Registrado...</a>
      <% else %>
      <% if ! current_user.can_register?( @optative)[1]%>
      <a href="" class="btn btn-primary btn-lg disabled">Ya registrado en <%= current_user.optatives.count%></a>
      <% else %>

      <a href="" class="btn btn-primary btn-lg disabled">Optativo no correspondiente <br> a tu carrera</a>
      <% end -%>
      <% end -%>
      <%else%>
      <a href="" class="btn btn-primary btn-lg disabled">Registrarse Aquí</a>
      <% end -%>
      <% end -%>

      <% end -%>
    </div>
  </div>
  <hr>

<div class="row">
<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="dashboard-stat dashboard-stat-v2 green" href="#">
