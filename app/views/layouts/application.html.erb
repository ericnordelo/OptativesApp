<!DOCTYPE html>
<html lang="es">
  <head>
    <title>Optativos MatCom</title>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <script type="text/javascript" src="/jquery.js"></script>
    <link href="/assets/global/plugins/bootstrap-sweetalert/sweetalert.css" rel="stylesheet" type="text/css" />
    <%= yield :styles %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'partials/nav'%>
    <div class="container">
      <%= yield %>
      <p class="hidden notice"><%= notice %></p>
      <p class="hidden alert"><%= alert %></p>
    </div>
  
<button id="notice" class="hidden  mt-sweetalert" data-title="" data-message="" data-type="success" data-allow-outside-click="true" data-confirm-button-class="btn-success"></button>
<button id="alert" class="hidden mt-sweetalert" data-title="" data-message="" data-type="error" data-allow-outside-click="true" data-confirm-button-class="btn-danger"></button>

  <%= render 'partials/footer'%>
  </body>
  <script type="text/javascript">
    var text_notice = $('p.notice').text();
        if (text_notice != "") {

          $('button#notice').attr('data-title', text_notice);
          $(document).on('ready', function(){

                $('button#notice').trigger('click');
          })
              
                
        };
    var text_alert = $('p.alert').text();
     if (text_alert != "") {

          $('button#alert').attr('data-title', text_alert);
          $(document).on('ready', function(){
            
                $('button#alert').trigger('click');
          })
        };
  </script>
  <script src="/assets/global/plugins/bootstrap-sweetalert/sweetalert.min.js" type="text/javascript"></script>
  <script src="/assets/pages/scripts/ui-sweetalert.min.js" type="text/javascript"></script>
  <%= yield :scripts %>
</html>
